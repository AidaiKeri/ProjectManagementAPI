<Window x:Class="ProjectManagementApp.UI.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="First Name:" />
                <TextBox Name="EmployeeFirstName" />
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Last Name:" />
                <TextBox Name="EmployeeLastName" />
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Email:" />
                <TextBox Name="EmployeeEmail" />
            </StackPanel>
            <Button Content="Save Changes" Click="OnSaveChangesClick" Margin="0,10" /> 
        </StackPanel>
    </Grid>
</Window>

